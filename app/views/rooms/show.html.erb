<%= stylesheet_link_tag 'rooms' %>
<% @page_title = 'ルーム詳細' %>

<div class="room-show">
    
    <%= render "shared/flash" %>
    <%= render "shared/error", obj: @reservation%>

    <div class="row">
        <div class="col-md-8">
            <% if @room.image.attached? %>
                <%= image_tag @room.image, class: "room_show_img" %>
            <% end %>
            <div class="room_show_text">
                <div class="room_show_icon">
                    <% if @user.image.attached? %>
                        <%= image_tag @user.image, class: "me_icon" %>
                    <% else %>
                        <img class="me_icon" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg" alt="アイコン"></img>
                    <% end %>
                </div>
                <div class="room_show_profile">
                    <p class="room_show_name"><%= @room.room_name %></p>
                    <p class="room_show_address"><%= @room.address %></p>
                </div>
            </div>
            <div class="room_show_intro"><%= @room.introduction %></div>
        </div>

        <div class="col-md-4">
            <div class="room_show_right_wide">
                <h4>¥<%= @room.price %>/日</h4>
                <div class="room_show_form">
                    <%= form_with model: @reservation do |f| %>
                        <%= f.hidden_field :room_id, value: @room.id %>
                        <%= f.hidden_field :user_id, value: @user.id %>
                        <%= f.hidden_field :all_price %>
                        <%= f.label :start_on ,"開始日", class: "form_layout" %><br>
                        <%= f.date_field :start_on, class: "form_layout" %><br>
                        <%= f.label :start_on ,"終了日", class: "form_layout" %><br>
                        <%= f.date_field :end_on, class: "form_layout" %><br>
                        <%= f.label :people_num ,"人数", class: "form_layout" %><br>
                        <%= f.text_field :people_num, class: "form_layout" %><br>
                        <%= f.submit "予約", class: "blue_button btn setup_btn_size form_layout" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
